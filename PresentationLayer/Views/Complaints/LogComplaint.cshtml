@model PresentationLayer.Models.ComplaintsModel
@{
    ViewData["Title"] = "Log Complaints";
}

<div class="container">
    <form method="post" asp-action="LogComplaint" asp-route-matricNumber="@ViewData["MatricNumber"]">
        <div class="p-3 mt-4">
            <div class="form-group row">
                <h2 class="text-info pl-3">Log Complaint</h2>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="form-group row mb-3">
                        <div class="col-4">
                            <label asp-for="ComplaintTypeId"></label>
                        </div>
                        <div class="col-8">
                            <select asp-for="ComplaintTypeId" class="form-control" asp-items="ViewBag.ComplaintTypeList">
                                <option selected disabled>--Please Select a Category--</option>
                            </select>
                            <span asp-validation-for="ComplaintTypeId" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row mb-3">
                        <div class="col-4">
                            <label asp-for="Description"></label>
                        </div>
                        <div class="col-8">
                            <textarea asp-for="Description" class="form-control" style="height: 230px;"></textarea>
                            @* <input asp-for="Description" class="form-control" /> *@
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Create" />
                            </div>
                            <div class="col">
                                <a asp-action="Dashboard" class="btn btn-primary w-100">Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
        </div>
    </form>
</div>



@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}